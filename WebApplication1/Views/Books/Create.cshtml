@model WebApplication1.Models.Book

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Tạo sách mới</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm p-3 mb-4 bg-white rounded">
        <h4 class="card-title mb-3">Book Information</h4>
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="row mb-2">
            <div class="col-md-6">
                <label for="Title" class="form-label"><b>Tên sách</b></label>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label for="Author" class="form-label"><b>Tác giả</b></label>
                @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-md-6">
                <label for="Publisher" class="form-label"><b>Nhà xuất bản</b></label>
                @Html.EditorFor(model => model.Publisher, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Publisher, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label for="Price" class="form-label"><b>Đơn giá</b></label>
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-md-6">
                <label for="ISBN" class="form-label"><b>Mã số sách</b></label>
                @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label for="Stock" class="form-label"><b>Số lượng sách hiện có trong kho</b></label>
                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-md-6">
                <label for="CategoryID" class="form-label"><b>ID danh mục</b></label>
                @Html.DropDownList("CategoryID", null, "Chọn danh mục", new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label for="ImageURL" class="form-label"><b>Hình</b></label>
                @Html.TextBoxFor(model => model.ImageURL, new { type = "file", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-danger" })

                @if (Model != null && !string.IsNullOrEmpty(Model.ImageURL))
                {
                    <div class="mt-2">
                        <img src="@Url.Content("~/Content/images/" + Model.ImageURL)" class="img-thumbnail" width="200" height="200" alt="Ảnh sản phẩm" />
                    </div>
                }
            </div>
        </div>

        <div class="mb-2">
            <label for="Description" class="form-label"><b>Mô tả</b></label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>

        <div class="mb-2">
            <label for="CreatedAt" class="form-label"><b>Ngày tạo sách</b></label>
            @Html.EditorFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-end mt-3">
            <input type="submit" value="Create" class="btn btn-primary me-2" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
